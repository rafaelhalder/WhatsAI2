{
  "name": "whatsai-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "WhatsAI Multi-Instance Manager - Monorepo (Frontend + Backend)",
  "scripts": {
    "dev": "concurrently -n \"BACK,FRONT\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "start": "npm run start:server",
    "start:server": "cd server && npm start",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "clean": "Remove-Item -Recurse -Force server/node_modules,server/dist,client/node_modules,client/dist,node_modules -ErrorAction SilentlyContinue"
  },
  "workspaces": [
    "server",
    "client"
  ],
  "keywords": [
    "whatsapp",
    "evolution-api",
    "multi-instance",
    "react",
    "typescript",
    "monorepo"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "daisyui": "^5.3.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
